{
  "name": "cr-system-backend",
  "version": "1.0.0",
  "description": "Backend API for Change Request System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:azure": "npx prisma generate --config prisma/prisma.config.js && node src/app.js",
    "dev": "nodemon src/app.js",
    "prisma:generate": "prisma generate --config prisma/prisma.config.js",
    "prisma:generate:ts": "prisma generate --config prisma/prisma.config.ts",
    "prisma:migrate": "prisma migrate dev --config prisma/prisma.config.ts",
    "prisma:migrate:deploy": "prisma migrate deploy --config prisma/prisma.config.js",
    "prisma:push": "prisma db push --config prisma/prisma.config.ts",
    "prisma:studio": "prisma studio --config prisma/prisma.config.ts",
    "seed": "node prisma/seed.js",
    "postinstall": "prisma generate --config prisma/prisma.config.js",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod": "docker compose -f docker-compose.yml up -d",
    "docker:prod:build": "docker compose -f docker-compose.yml up -d --build",
    "docker:prod:down": "docker compose -f docker-compose.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f api",
    "docker:clean": "docker compose -f docker-compose.yml down -v --rmi all && docker compose -f docker-compose.dev.yml down -v --rmi all"
  },
  "keywords": [
    "express",
    "prisma",
    "postgresql",
    "change-request",
    "approval-workflow"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@azure/communication-email": "^1.0.0",
    "@azure/storage-blob": "^12.29.1",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "prisma": "^7.0.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
